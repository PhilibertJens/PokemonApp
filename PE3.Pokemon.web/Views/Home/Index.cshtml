@model PE3.Pokemon.web.Models.HomeIndexVm
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div>Hello @Model.Username</div>
<ul>
    @{
        foreach (var pokemon in Model.AllPokemonWithTypeInfo)
        {
            <li>
                <p><b>@pokemon.Name</b></p>
                @foreach (var type in pokemon.PokemonTypes)
                {
                    <p>Type: @type.Type.Name</p>
                }
            </li>
        }
    }
</ul>



@model PE3.Pokemon.web.Models.HomeIndexVm
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div>Hello @Model.Username</div>
<div class="pokeview">
    <div class="pokelist">
        @{
            foreach (var pokemon in Model.AllCaughtPokemon)
            {
                <div class="pokecell">
                    <a title="@pokemon.Key.Name" asp-controller="Home" asp-action="Pokemon" asp-route-id="@pokemon.Key.Id">
                        <img src="~/images/PokeImages/@pokemon.Key.ImgUrl" />
                    </a>
                </div>
            }
        }
    </div>
</div>



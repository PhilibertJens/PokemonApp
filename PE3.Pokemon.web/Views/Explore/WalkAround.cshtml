@model PE3.Pokemon.web.Models.ExploreWalkAroundVm
@{
    ViewData["Title"] = "WalkAround";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <header>
        <h2>Welcome to the world of Pokemon!</h2>
        <p>
            These mysterious creatures are everywhere. Stay alert of your surroundings. <br />
            If you're lucky, you could catch some.
        </p>
    </header>
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/images/forest.jpg" alt="Los Angeles" style="width:100%;">
        </div>

        <div class="item">
            <img src="~/images/mountain.jpg" alt="Chicago" style="width:100%;">
        </div>

        <div class="item">
            <img src="~/images/sea.jpg" alt="New york" style="width:100%;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row walkAround">
    <div class="col-md-12">
        <h3>In what kind of area are you situated?</h3><br />
        <p>This could be important for the type of pokemon you run into.</p><br />
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post">
            <div class="form-group">
                <label asp-for="SelectedEnvironmentId"></label><br />
                <select asp-for="SelectedEnvironmentId"
                        asp-items="Model.Environments"></select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDayTimeId"></label><br />
                <select asp-for="SelectedDayTimeId"
                        asp-items="Model.DayTime"></select>
            </div><br />
            <button type="submit" class="btn btn-default">Start discovery tour!</button>
        </form>
    </div>
</div>
<script src="~/js/konami.js"></script>

@section niceSelect {
    <environment names="Production, Staging">
        <link rel="stylesheet" asp-append-version="true" href="~/css/nice-select.css" />
    </environment>
    <environment names="Development">
        <link rel="stylesheet" asp-append-version="true" href="~/css/nice-select.css" />
    </environment>
}
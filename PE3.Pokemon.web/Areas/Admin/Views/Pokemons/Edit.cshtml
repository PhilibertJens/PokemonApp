@model PE3.Pokemon.web.Areas.Admin.Models.PokemonEditVm
@{
    ViewData["Title"] = "Edit";
    
}

<h2>Edit</h2>

<h4>Pokemon</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HasAllolanForm" class="control-label"></label>
                <input asp-for="HasAllolanForm" class="form-control" />
                <span asp-validation-for="HasAllolanForm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="location" class="control-label"></label>
                <input asp-for="location" class="form-control" />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label>Pokemon Image</label>
                    <img style="display:block;margin:0 auto;max-width:300pc;max-height:300px;" src="~/images/PokeImages/@Model.ImgUrl" />
                </div>
                <label asp-for="UploadedImage" class="control-label">Upload a new image for this Pokemon</label>
                <input type="file" asp-for="UploadedImage" class="form-control" />
                <p>
                    <span asp-validation-for="UploadedImage" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label class="control-label">Select types for this Pokemon</label>
                    <table class="table">
                        <tr>
                            @{ 
                                int counter = 0;
                                List<PE3.Pokemon.web.Areas.Admin.Models.AssignedTypeDataVm> Types = ViewBag.Types;

                                foreach (var type in Types)
                                {
                                    if (counter++ %2 == 0)
                                    {
                                        @:
                                    <tr></tr>
                                    }
                                <td class="myCssTd">
                                    <input type="checkbox" class="checkbox-inline" name="selectedTypes" value="@type.TypeId" @Html.Raw(type.Assigned ? "checked=\"checked\"" : "")) />
                                    @type.TypeName
                                </td>
                                }
                            }
                        </tr>
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@model PE3.Pokemon.web.Areas.Admin.Models.PokemonsIndexVm
@{
    ViewData["Title"] = "Index";
   
}

<h2>Pokemon Administration</h2>

<p>
    <a asp-action="Create"><span class=" glyphicon glyphicon-plus"></span>&nbsp;Create New </a>
</p>

<table class=" table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pokemons.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemons.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemons.FirstOrDefault().Location)
            </th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model.Pokemons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=> item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=> item.Location)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-edit"></span>&nbsp; Edit</a><br />
                    <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-zoom-in"></span>&nbsp; Details</a><br />
                    <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span>&nbsp; Delete</a><br />
                </td>
            </tr>
        }
    </tbody>
</table>

